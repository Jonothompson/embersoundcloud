<section class="musicPlayer" id="musicPlayer">
	<div class="startStop">
		<button class="playButton" id="musicPlayer">Play</button>
	</div>
	<div class="info">
		<span><button>Repeat</button></span>
		<div class="infoLabels">
			<h2>{{model.title}}</h2>
			<h2>{{model.user.username}}</h2>
		</div>
		<span><button>Volume</button></span>
	</div>
	<div class="progressBar">
		<span class="timePlayed">0:00</span>
		<div class="progressionBar"></div>
		<span class="remaingTime">0:00</span>
	</div>
	<div class="stats">
		<a class="soundCloudLog">logo</a>
		<a class="buy">BUY</a>
		<a class="listens">{{model.playback_count}}</a>
		<a class="likes">{{model.favoritings_count}}</a>
	</div>
</section>

